%h1 Filters
= form_tag students_path, id: 'filter_form', method: :get do
  %table
    %tr
      %td Name
      %td= text_field :filter, 'name', value: @filters[:name]
    %tr
      %td Surname
      %td= text_field :filter, 'surname', value: @filters[:surname]
    %trs
      %td Department
      %td= select :filter, 'department', ['', 'CS','EE','MATH'], selected: @filters[:dept]
    %tr
      %td= submit_tag 'Search'

%h1 Students

%table#students
  %thead
    %tr
      %th Full name
      %th Department
      %th More info
  %tbody
    - @students.each do |student|
      %tr
        %td= student.full_name
        %td= student.department_code
        %td= link_to "More about #{student.name} #{student.surname}", student_path(student)

= link_to 'Add new student ', new_student_path